"resource/layout/overlaydesktop.layout"
{
	styles
	{
		topbar
		{
			font-size=36
			textcolor="window_fg"
			padding-top=10
			font-weight=400
		}

		clocksuffix
		{
			font-size=36
			textcolor="window_fg"
			padding-top=10
			font-weight=400
			font-style=uppercase;
		}

		timeStrings
		{
			font-size="17"
			textcolor="window_fg"
			font-family=basefont
			font-weight=400
		}

		sidemenu
		{
			textcolor=none
			bgcolor=none
			render_bg {}
		}

		sidemenu:hover
		{
			render_bg
			{
				0="fill(x0+20, y0, x1-20, y1, button_hover_bg)"
				1="fill(x0, y0+20, x0+20, y1-20, button_hover_bg)"
				2="fill(x1-20, y0+20, x1, y1-20, button_hover_bg)"
				3="image(x0, y0, x0+20, y0+20, assets/corners/20_w15/tl)"
				4="image(x1-20, y0, x1, y0+20, assets/corners/20_w15/tr)"
				5="image(x0, y1-20, x0+20, y1, assets/corners/20_w15/bl)"
				6="image(x1-20, y1-20, x1, y1, assets/corners/20_w15/br)"
			}
		}
	}

	layout
	{
		region { name="toppanel" width=400 align=top-center margin-top=20 }
		place { controls="Clock,ClockSuffix" region="toppanel" align=top-center }
		place { controls="SessionText,TwoWeeksText,ForeverText" region="toppanel" start=Clock align=top-center dir=down }

		// popover_padding = 20, button_width = 80, button_spacing = 12

		// width = FriendsDetailPanel + ScreenshotsDetailPanel + AchievementsDetailPanel + CommunityHubDetailPanel
		region { name="bottom" align=bottom height=180 margin-bottom=60 }
		region { name="bottompanel" region="bottom" align=top-center width=844 height=120 }

		// width = popover_padding + button_width*2 + button_spacing*1.5
		place { controls="FriendsDetailPanel" region="bottompanel" height=120 width=218 }

		// width = button_width + button_spacing
		place { controls="ScreenshotsDetailPanel,AchievementsDetailPanel" region="bottompanel" start="FriendsDetailPanel" height=120 width=102 }
		
		// CommunityHubDetailPanel has extra width to provide ...
		// ... background and icon for EditControllerConfig
		// ... background for TaskbarPanel (in overlaydashboard.layout/overlaytaskbar.layout)
		// width = popover_padding + button_width*4 + button_spacing*3.5
		place { controls="CommunityHubDetailPanel" region="bottompanel" start="AchievementsDetailPanel" height=120 width=422 }

		// width = button_width, margin-left = button_width + button_spacing*1.5
		place { controls="EditControllerConfig" region="bottompanel" start="AchievementsDetailPanel" width=90 height=80 margin-top=20 margin-left=108 }

		region { name="hidden" width=0 height=0 margin-left=-999 }
		place { controls="ForceQuitButton,GameGroupsButton,ChatRoomButton,DLCButton,GuideButton,LegacyCDKeyButton,WebSiteButton,RecommendButton,WorkshopButton,BroadcastDetailPanel,GuidesDetailPanel,CommunityDiscussionsDetailPanel,MewsDetailPanel" region="hidden" width=0 height=0 }
	}
}
