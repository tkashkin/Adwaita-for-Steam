"resource/layout/overlay_communityhubpanel.layout"
{
    styles
    {
        detailsbox {
            bgcolor=none
            render_bg {
                0="fill(x0, y0, x1-40, y1, window_bg)"
                1="fill(x1-40, y0+40, x1, y1-40, window_bg)"
                2="image(x1-40, y0, x1, y0+40, assets/corners/40_window_bg/tr)"
                3="image(x1-40, y1-40, x1, y1, assets/corners/40_window_bg/br)"

                4="image(x0+34, y0+44, x1, y1, assets/icons_32/community)"

                5="image(x0+134, y0+44, x1, y1, assets/icons_32/gamepad)"
            }
        }

        Button
        {
            textcolor=none
            render_bg {}
        }

        Button:hover
        {
            render_bg
			{
				0="fill(x0+24, y0, x1-24, y1, button_hover_bg)"
				1="fill(x0, y0+24, x0+24, y1-24, button_hover_bg)"
				2="fill(x1-24, y0+24, x1, y1-24, button_hover_bg)"
				3="image(x0, y0, x0+24, y0+24, assets/corners/24_w15/tl)"
				4="image(x1-24, y0, x1, y0+24, assets/corners/24_w15/tr)"
				5="image(x0, y1-24, x0+24, y1, assets/corners/24_w15/bl)"
				6="image(x1-24, y1-24, x1, y1, assets/corners/24_w15/br)"
			}
        }

        Button:active
        {
            render_bg
			{
				0="fill(x0+24, y0, x1-24, y1, button_hover_bg)"
                1="fill(x0, y0+24, x0+24, y1-24, button_hover_bg)"
                2="fill(x1-24, y0+24, x1, y1-24, button_hover_bg)"
                3="image(x0, y0, x0+24, y0+24, assets/corners/24_w15/tl)"
                4="image(x1-24, y0, x1, y0+24, assets/corners/24_w15/tr)"
                5="image(x0, y1-24, x0+24, y1, assets/corners/24_w15/bl)"
                6="image(x1-24, y1-24, x1, y1, assets/corners/24_w15/br)"
			}
        }
    }

    layout
    {
        place { controls="ViewCommunityHub" width=80 height=80 margin-top=20 margin-left=10 }

        region { name="hidden" width=0 height=0 margin-left=-999 }
        place { controls="TitleText,NumContributionsText" region="hidden" width=0 height=0 }
    }
}