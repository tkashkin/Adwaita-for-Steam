"resource/layout/overlaytaskbar.layout"
{
	styles
	{
		taskbar
		{
			textcolor=none
		}

		taskbar:hover
		{
			render_bg
			{
				0="fill(x0+24, y0, x1-24, y1, button_hover_bg)"
				1="fill(x0, y0+24, x0+24, y1-24, button_hover_bg)"
				2="fill(x1-24, y0+24, x1, y1-24, button_hover_bg)"
				3="image(x0, y0, x0+24, y0+24, assets/corners/24_w15/tl)"
				4="image(x1-24, y0, x1, y0+24, assets/corners/24_w15/tr)"
				5="image(x0, y1-24, x0+24, y1, assets/corners/24_w15/bl)"
				6="image(x1-24, y1-24, x1, y1, assets/corners/24_w15/br)"
			}
		}

		EditablePanel
		{
			render_bg {
				0="image(x0+24, y0+24, x1, y1, assets/icons_32/settings)"
				1="image(x0+124, y0+24, x1, y1, assets/icons_32/browser)"
			}
		}
	}

	layout
	{
		region { name="panel" height=80 }
		place { controls="SettingsButton,WebBrowserButton" region="panel" width=80 height=80 spacing=20 }

		region { name="hidden" width=0 height=0 margin-left=-999 }
		place { controls="TaskbarPanel,SteamLogo,MusicPlayerButton,ScreenshotsButton,view_friends" region="hidden" width=0 height=0 }
	}
}
