"resource/layout/overlay_screenshotspanel.layout"
{
	styles
	{
		detailsbox {
			bgcolor="window_bg"
			render_bg {
				0="image(x0+34, y0+44, x1, y1, assets/icons_32/screenshots)"
			}
		}

		Button
		{
			textcolor=none
			render_bg {}
		}

		Button:hover
		{
			render_bg
			{
				0="fill(x0+24, y0, x1-24, y1, button_hover_bg)"
				1="fill(x0, y0+24, x0+24, y1-24, button_hover_bg)"
				2="fill(x1-24, y0+24, x1, y1-24, button_hover_bg)"
				3="image(x0, y0, x0+24, y0+24, assets/corners/24_w15/tl)"
				4="image(x1-24, y0, x1, y0+24, assets/corners/24_w15/tr)"
				5="image(x0, y1-24, x0+24, y1, assets/corners/24_w15/bl)"
				6="image(x1-24, y1-24, x1, y1, assets/corners/24_w15/br)"
			}
		}

		Button:active
		{
			render_bg
			{
				0="fill(x0+24, y0, x1-24, y1, button_hover_bg)"
				1="fill(x0, y0+24, x0+24, y1-24, button_hover_bg)"
				2="fill(x1-24, y0+24, x1, y1-24, button_hover_bg)"
				3="image(x0, y0, x0+24, y0+24, assets/corners/24_w15/tl)"
				4="image(x1-24, y0, x1, y0+24, assets/corners/24_w15/tr)"
				5="image(x0, y1-24, x0+24, y1, assets/corners/24_w15/bl)"
				6="image(x1-24, y1-24, x1, y1, assets/corners/24_w15/br)"
			}
		}
	}

	layout
	{
		place { controls="ViewScreenshots" width=80 height=80 margin-top=20 margin-left=10 }

		region { name="hidden" width=0 height=0 margin-left=-999 }
		place { controls="TitleText,InstructionText,SetShortcut" region="hidden" width=0 height=0 }
	}
}
